# use C++11
CXX_STD = CXX11

PKG_CPPFLAGS=-ffast-math

# to set flags for the linker
PKG_LIBS = $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS) \
	$(shell ${R_HOME}/bin/Rscript -e "RcppParallel::RcppParallelLibs()")

all: $(SHLIB)

clean:
	rm -f ../.travis.yml
	rm -f ../.gitignore
